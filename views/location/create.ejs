<% if (location && location.error) { %>
    <div class="alert alert-danger" role="alert"><%- JSON.stringify(location.error) %></div>
    <% } %>
  <br>
  <br>
  <div class="card">
    <div class="card-header">
      Add Location
    </div>
    <div class="card-body">
      <form name ="myForm" action="/location/save" method="post">
        <div class="form-group1">
          <label for="locationId">Location Id:</label>
          <input type="number" class="form-control" id="locationId" name="locationId" value="<%= location.locationId %>" autocomplete="on">
        </div>
        <br>
        <div class="form-group">
          <label for="locationName">Location Name:</label>
          <input type="text" class="form-control" id="locationName" name="locationName" value="<%= location.locationName %>" pattern="^[a-zA-Z ]*$" title="It only accepts alphabets not numbers and special characters." autocomplete="off" required>
        </div>
        <br>
        <div class="form-group">
          <label for="locationLatitude">Location Latitude:</label>
          <input type="number" class="form-control" id="locationLatitude" name="locationLatitude" value="<%= location.locationLatitude %>" min=-90 max=90  step=0.0000001 autocomplete="off" required> 
        </div>
        <br>
        <div class="form-group">
          <label for="locationLongitude">Location Longitude:</label>
          <input type="number" class="form-control" id="locationLongitude" name="locationLongitude" value="<%= location.locationLongitude %>" min=-180 max=180 step=0.0000001 autocomplete="off" required>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save request" value="Create" />
        </div>
      </form>
    </div>
  </div>