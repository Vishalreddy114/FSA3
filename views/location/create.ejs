<% if (location && location.error) { %>
  <div class="alert alert-danger" role="alert"><%- JSON.stringify(location.error) %></div>
  <% } %>
<br>
<br>
<div class="card">
  <div class="card-header">
    Add Location
  </div>
  <div class="card-body">
    <form action="/location/save" method="post">
      <div class="form-group">
        <label for="locationName">Name:</label>
        <input type="text" class="form-control" id="locationName" name="locationName" value="<%= location.locationName %>" autocomplete="off">
      </div>
      <br>
      <div class="form-group">
        <input type="submit" class="btn btn-info" title="Submits a POST /save request" value="Create" />
      </div>
    </form>
  </div>
</div>